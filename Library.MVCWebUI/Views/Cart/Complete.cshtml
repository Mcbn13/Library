@model Library.MVCWebUI.Models.UserDetailsViewModel

@{
    ViewData["Title"] = "Complete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>User Details</h2>
<form asp-controller="Cart" asp-action="Complete" method="post">
    <div class="form-group">
        <label asp-for="User.Name"></label>
        <input asp-for="User.Name" class="form-control" placeholder="First Name">
        <span asp-validation-for="User.Name"></span>
    </div>
    
    <div class="form-group">
        <label asp-for="User.SurName"></label>
        <input asp-for="User.SurName" class="form-control" placeholder="Last Name">
        <span asp-validation-for="User.SurName"></span>
    </div>

    <div class="form-group">
        <label asp-for="User.Adress"></label>
        <input asp-for="User.Adress" class="form-control" placeholder="Address">
        <span asp-validation-for="User.Adress"></span>
    </div>

    <div class="form-group">
        <label asp-for="User.Email"></label>
        <input asp-for="User.Email" class="form-control" placeholder="Email">
        <span asp-validation-for="User.Email"></span>
    </div>

    <div class="form-group">
        <label asp-for="User.BirthDate"></label>
        <input asp-for="User.BirthDate" class="form-control" placeholder="Birth Date">
        <span asp-validation-for="User.BirthDate"></span>
    </div>
    <input type="submit" value="Complete Shopping" class="btn btn-xs btn-success" />
</form>
