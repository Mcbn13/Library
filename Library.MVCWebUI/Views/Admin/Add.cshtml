@using System.Threading.Tasks
@using Library.MVCWebUI.Models
@model Library.MVCWebUI.Models.BookAddViewModel

@{
    ViewData["Title"] = "Add";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Add a Book</h2>

<form asp-controller="Admin" asp-action="Add" method="post">
    <div class="form-group">
        <label asp-for="Book.Title"></label>
        <input asp-for="Book.Title" class="form-control" placeholder="Book Name" />
        <span asp-validation-for="Book.Title"></span>
    </div>
    <div class="form-group">
        <label asp-for="Book.CategoryId"></label>
        <select asp-for="Book.CategoryId" class="form-control"
                asp-items="@(new SelectList(Model.Categories,"CategoryId","CategoryName"))"></select>
        <span asp-validation-for="Book.CategoryId"></span>
    </div>
    <div class="form-group">
        <label asp-for="Book.LoanPrice"></label>
        <input asp-for="Book.LoanPrice" class="form-control" placeholder="Unit Price" />
        <span asp-validation-for="Book.LoanPrice"></span>
    </div>
    <div class="form-group">
        <label asp-for="Book.UnitInStock"></label>
        <input asp-for="Book.UnitInStock" class="form-control" placeholder="Units In Stock" />
        <span asp-validation-for="Book.UnitInStock"></span>
    </div>
    <input type="submit" value="Add" class="btn btn-xs btn-success" />
</form>